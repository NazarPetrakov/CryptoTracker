<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:v="clr-namespace:CryptoTracker.WPF.Views"
                    xmlns:vm="clr-namespace:CryptoTracker.WPF.ViewModels">
    <DataTemplate DataType="{x:Type TypeName=vm:HomeViewModel}">
        <v:HomeView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type TypeName=vm:DetailedCoinViewModel}">
        <v:DetailedCoinView />
    </DataTemplate>
    <DataTemplate x:Key="CoinNameTemplate">
        <StackPanel Orientation="Horizontal">
            <Image Width="30"
                   Height="30"
                   Margin="1,3,6,3"
                   Source="{Binding Image}" />
            <TextBlock VerticalAlignment="Center" Text="{Binding Name}" />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>